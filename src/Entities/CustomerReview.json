{
    "name": "CustomerReview",
    "type": "object",
    "properties": {
        "customer_name": {
            "type": "string",
            "description": "Customer name"
        },
        "customer_image": {
            "type": "string",
            "description": "Customer profile image URL"
        },
        "rating": {
            "type": "number",
            "minimum": 1,
            "maximum": 5,
            "description": "Star rating"
        },
        "review_text": {
            "type": "string",
            "description": "Review content"
        },
        "location": {
            "type": "string",
            "description": "Customer location"
        },
        "is_active": {
            "type": "boolean",
            "default": true,
            "description": "Show on homepage"
        },
        "display_order": {
            "type": "number",
            "default": 0,
            "description": "Sort order"
        }
    },
    "required": [
        "customer_name",
        "rating",
        "review_text"
    ]
}
{
    "name": "Review",
    "type": "object",
    "properties": {
        "product_id": {
            "type": "string",
            "description": "Product being reviewed"
        },
        "user_email": {
            "type": "string",
            "description": "Reviewer email"
        },
        "user_name": {
            "type": "string",
            "description": "Reviewer name"
        },
        "rating": {
            "type": "number",
            "minimum": 1,
            "maximum": 5,
            "description": "Star rating (1-5)"
        },
        "title": {
            "type": "string",
            "description": "Review title"
        },
        "comment": {
            "type": "string",
            "description": "Review text"
        },
        "images": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Review images"
        },
        "verified_purchase": {
            "type": "boolean",
            "default": false,
            "description": "Verified buyer badge"
        },
        "helpful_count": {
            "type": "number",
            "default": 0,
            "description": "Helpful votes"
        },
        "is_approved": {
            "type": "boolean",
            "default": true,
            "description": "Admin approval status"
        }
    },
    "required": [
        "product_id",
        "user_email",
        "rating"
    ]
}